swagger: '2.0'
info:
  description: This is the subsidiaries API specification and documentation.
  version: '0.9'
  title: Subsidiaries
  contact:
    email: c.cosnefroy@arkadin.com
host: api-dev.arkadin.com
basePath: /
schemes:
  - https
paths:
  /subsidiaries:
    get:
      summary: Returns the subsidiaries
      operationId: getSubsidiaries
      description: |
        Returns the complete list of subsidiaries 
      produces:
        - application/json
        - text/xml
      parameters:
        - in: header
          name: Accept
          description: 'If Accept = ''application/xml'' or ''text/xml'', the response will be in xml otherwise in json'
          required: false
          type: string
      responses:
        '200':
          description: the subsidiaries list
          schema:
            type: array
            items:
              $ref: '#/definitions/Subsidiary'
        '405':
          description: API Key not present
          schema:
            $ref: '#/definitions/ErrorModel'
          examples:
            code: 405
            message: API Key not present
            moreInfo: 'https://api-dev.arkadin.com/doc/apikey'
  '/subsidiaries/{subsidiaryCode}':
    get:
      summary: Returns the subsidiary given the code
      operationId: getSubsidiariesByCode
      description: |
        Returns the informations for the subsidiary given the code
      produces:
        - application/json
        - text/xml
      parameters:
        - in: path
          name: subsidiaryCode
          description: The code of the subsidiary
          required: true
          type: string
        - in: header
          name: Accept
          description: 'If Accept = ''application/xml'' or ''text/xml'', the response will be in xml otherwise in json'
          required: false
          type: string
      responses:
        '200':
          description: the subsidiaries list
          schema:
            items:
              $ref: '#/definitions/Subsidiary'
        '404':
          description: Subsidiary not found
          schema:
            $ref: '#/definitions/ErrorModel'
          examples:
            code: 404
            message: Subsidiary not found
            moreInfo: 'https://api-dev.arkadin.com/doc/subsidiary/todo'
  '/subsidiaries/billingaccount/{billingAccount}':
    get:
      summary: Returns the subsidiaries given a billing account
      operationId: getSubsidiariesByBillingAccount
      description: |
        Returns the informations for the subsidiaries given a billing account
      produces:
        - application/json
        - text/xml
      parameters:
        - in: path
          name: billingAccount
          description: The billing account
          required: true
          type: string
        - in: header
          name: Accept
          description: 'If Accept = ''application/xml'' or ''text/xml'', the response will be in xml otherwise in json'
          required: false
          type: string
      responses:
        '200':
          description: the subsidiaries list
          schema:
            items:
              $ref: '#/definitions/Subsidiary'
        '404':
          description: Billing account not found
          schema:
            $ref: '#/definitions/ErrorModel'
          examples:
            code: 404
            message: Billing account not found
            moreInfo: 'https://api-dev.arkadin.com/doc/subsidiary/todo'
securityDefinitions:
  UserSecurity:
    type: apiKey
    in: query
    name: apikey
security:
  - UserSecurity: []
definitions:
  Subsidiary:
    properties:
      region:
        type: string
        example: EMEA
      code:
        type: string
        example: SU1
      country:
        type: string
        example: FRANCE
      countryCode:
        type: string
        example: FR
      name:
        type: string
        example: Arkadin France
      navisionDatabase:
        type: string
        example: NAV_FR
      navisionPrefixTable:
        type: string
        example: ARKADIN Corporate
      currencies:
        type: array
        items:
          $ref: '#/definitions/Currency'
  ErrorModel:
    type: object
    properties:
      code:
        type: integer
        example: 404
      message:
        type: string
        example: Subsidiary not found
      moreInfo:
        type: string
  Currency:
    type: object
    properties:
      default:
        type: boolean
        example: 'true'
      currency:
        type: string
        example: EUR
